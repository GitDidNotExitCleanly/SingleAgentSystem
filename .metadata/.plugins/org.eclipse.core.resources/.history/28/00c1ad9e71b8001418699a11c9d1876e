import uk.ac.nott.cs.g54dia.library.Tanker;


public class Main {

	public static void main(String[] args) {
		
		
		
		int valueSize = (45-12)/(12*2)+1;
		int remaining = (45-12)%(12*2);
		int[] value = new int[(valueSize*2)+1];
	
		value[valueSize] = 0;
		for (int i=1;i<value.length;i++) {
			if (i >= value.length-2) {
				if (i%2 != 0) {
					value[valueSize+((i+1)/2)] = value[valueSize+((i+1)/2)-1]+remaining;
				}
				else {
					value[valueSize-(i/2)] = value[valueSize-(i/2)+1]-remaining;
				}
			}
			else {
				if (i%2 != 0) {
					value[valueSize+((i+1)/2)] = ((i+1)/2)*12*2;
				}
				else {
					value[valueSize-(i/2)] = -(i/2)*12*2;
				}
			}
		}
	} 
}
